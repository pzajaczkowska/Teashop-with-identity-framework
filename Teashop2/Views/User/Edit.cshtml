@model Teashop2.ViewModel.UserViewModel

@{
    ViewData["Title"] = "Edycja użytkownika";
}

<h1>Edytuj Użytkownika</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="User.Id" />
            <div class="form-group">
                <input asp-for="User.UserName" class="form-control" disabled />
            </div>
            <div class="form-group">
                <input asp-for="User.Email" class="form-control" disabled />
            </div>
            <div class="form-group form-check">
                <h4>Role</h4>
                @for (int i = 0; i < Model.Roles.Count; i++)
                {
                    <div class="form-check">
                        <input type="hidden" asp-for="Roles[i].Id" />
                        <input type="hidden" asp-for="Roles[i].Name" />
                        <input type="checkbox" asp-for="Roles[i].IsSelected" class="form-check-input" />
                        <label class="form-check-label">@Model.Roles[i].Name</label>
                    </div>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Edytuj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót do listy użytkowników</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
