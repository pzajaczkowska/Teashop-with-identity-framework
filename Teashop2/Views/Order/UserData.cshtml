@model IEnumerable<Teashop2.Models.Order>

@{
    ViewData["Title"] = "Zamówienia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Historia zamówień</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Data
            </th>
            <th>
                Status
            </th>
            <th>
                Koszt
            </th>
            <th>
                Dostawa
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @item.TotalCost.ToString("c2")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Shipment.Name)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Szczegóły</a><br>
                    <a asp-controller="Order" asp-action="GeneratePdf" asp-route-orderId="@item.Id" target="_blank" class="btn btn-secondary">Generuj PDF</a>
                </td>
            </tr>
        }
    </tbody>
</table>
